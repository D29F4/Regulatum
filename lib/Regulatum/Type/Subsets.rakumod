##===========================================================================
##  Subsets
##===========================================================================


#----------------------------------------------------------------------------
#  Numeric sets
#----------------------------------------------------------------------------
#  Positive integers
subset Int_Pos of Int where * > 0;

#  Natural numbers
subset Int_N of Int where * >= 0;

#----------------------------------------------------------------------------
#  Index
#  Integers representing indices of arrays.
#----------------------------------------------------------------------------
subset Index of Int_N;

#----------------------------------------------------------------------------
#  Dimension
#  The number of cells on a dimensional axis.
#----------------------------------------------------------------------------
subset Dimension of Int_Pos;

#----------------------------------------------------------------------------
#  Extension
#  The length of a Tile in a particular dimension.
#  (An extension of zero length fills the current position in its respective
#  dimension.)
#----------------------------------------------------------------------------
subset Extension of Int_N;

#----------------------------------------------------------------------------
#  Position
#  The cell index in a (zero-initial) dimensional axis.
#----------------------------------------------------------------------------
subset Position of Int_N;

#----------------------------------------------------------------------------
#  Fit tactic
#  The integer representing a particular tactic within a fit strategy.
#----------------------------------------------------------------------------
subset Fit_Tactic of Int_Pos;

#----------------------------------------------------------------------------
#  Spacing ratio
#----------------------------------------------------------------------------
subset Spacing_Ratio of Int_N;

#----------------------------------------------------------------------------
#  Colors used for tile display
#----------------------------------------------------------------------------
subset Color of Str;
